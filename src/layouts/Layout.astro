---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="'Polvo para Malteadas' es tu destino para descubrir una amplia gama de sabores y opciones para preparar malteadas deliciosas en casa. Explora nuestras variedades de polvo, encuentra recetas creativas, y obtén consejos para disfrutar al máximo de tus malteadas. "
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen dark:bg-slate-900 bg-slate-50 dark:text-white text-black">
		<Navbar />
		<main class="flex-1">
			<slot />
		</main>
		<Footer />
	</body>
</html>
